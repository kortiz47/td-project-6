extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= projectName

        p= description

      .project-tech-links-box.box
        h6 Technologies
        ul

          each technology in technologies
            li= technology

        a.btn-link(href=`${liveLink}` target='_blank') Live Demo
        a.btn-link(href=`${githubLink}` target='_blank') GitHub Repo

    .project-img-box.box

      img.project-img(src=`${imagesArray[1]}`, alt='')
      img.project-img(src=`${imagesArray[2]}`, alt='')
      img.project-img(src=`${imagesArray[3]}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
